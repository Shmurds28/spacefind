<%- include('partials/header') %>  

<div class="container">
    <div class="show-container">
            <div class="row">
                <div class="col-md-6">
                    <img class="img-thumbnail" src="<%= accommodation.image %>" alt="">
                </div>
                <div class="col-md-6">
                    <h4 > <%= accommodation.name %> </h4>
                    <p><%= accommodation.description %></p>
                    <p><i class="fas fa-phone-alt"></i> <%= accommodation.phone %></p>
                    <p><i class="fas fa-envelope"></i> <a href="#"><%= accommodation.email %></a> </p>
                    <input class="apply" type="submit" value="Apply">
                </div>
            </div> 
    </div>
    <div class="card card-body residences-container">
        <div class="text-right">
            <a href="/accommodations/<%= accommodation._id %>/residences/new">
                <input type="submit" value="Add New Residence">
            </a>
        </div>
        <hr>
       <% accommodation.residences.forEach(function(residence){ %>
        
            <div class="residence">
                <strong> <%= residence.name %> - <%= residence.price %> </strong>
                <input class="float-right " type="submit" value="View">
                <p><%= residence.type %> room </p>
            </div>
       
       <% }) %>
        
    </div>
</div>
<%- include('partials/footer') %>    