<%- include('partials/header.ejs') %>

<div class="container">
    <div class="form-container ">
        <div class="form-head">
            <h1>Register</h1>
        </div>
        <form action="/register" method="POST">
            <div class="form-group row">
                <input class="form-control col" type="text" name="name" placeholder="firstname" required>
                <input class="form-control col" type="text" name="surname" placeholder="Surname" required>
            </div>
           <div class="form-group row">
               <input class="col form-control" type="date" name="dob" placeholder="Date of birth">
               <select class="col form-control" name="gender" id="gender">
                   <option value="Male">Male</option>
                   <option value="Female">Female</option>
                   <option value="Other">Other</option>
               </select>
           </div>
           <div class="row form-group"> 
               <input class="col form-control" type="tel" name="phone" placeholder="Cellphone Number" required>
                <input class="col form-control" type="email" name="email" placeholder="Email Address" required>
           </div>
           <div class="form-group row">
            <input class="form-control col" type="text" name="studentNumber" placeholder="Student Number">
            <input class="form-control col" type="address" name="address" placeholder="Postal Address">
        </div>
        <div class="form-group row">
            <input class="form-control col" type="password" name="password" placeholder="Create Password" required>
            <input class="form-control col" type="password" name="confirmed-password" placeholder="Confirm Password" required>
        </div>

        <div class="form-group row">
            <input class=" form-control" type="submit" value="Register">
            <input class="form-control" type="submit" value="Reset">
        </div>
       
        </form>
    </div>
</div>

<%-include('partials/footer.ejs') %>