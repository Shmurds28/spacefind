<%- include('../partials/header.ejs') %>

<div class="container">
    <div class="form-container ">
        <div class="form-head">
            <h1>Student Registration</h1>
        </div>
        <form action="/student/register" method="POST">
                <div class="form-group row">
                    <input class="form-control col-lg col-md-12" type="text" name="name" placeholder="firstname" required>
                    <input class="form-control col-lg col-md-12" type="text" name="surname" placeholder="Surname" required>
                </div>
            <div class="form-group row">
                <input class="col-lg col-md-12 form-control" type="date" name="dob" placeholder="Date of birth" required>
                <select class="col-lg col-md-12 form-control" name="gender" id="gender" required>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="row form-group"> 
                <input class="col-md-12 col-lg form-control" type="tel" name="phone" placeholder="Cellphone Number" required>
                    <input class="col-md-12 col-lg form-control" type="email" name="email" placeholder="Email Address" required>
            </div>
            <div class="form-group row">
                <input class="form-control col-md-12 col-lg" type="address" name="address" placeholder="Postal Address" required>
                <input class="form-control col-md-12 col-lg" type="text" name="studentNumber" placeholder="Student Number" required>
                
            </div>
            
            <div class="form-group row">
                <input class="col-md-12 col-lg form-control" type="text" name="qualification" placeholder="Qualification" required>
                <select class="col-md-12 col-lg form-control" name="yearOfStudy">
                    <option value="first year" selected>1st</option>
                    <option value="second year">2nd</option>
                    <option value="third year">3rd</option>
                    <option value="fourth year">4th</option>
                    <option value="fifth year">5th</option>
                    <option value="Post-grad">Post Graduate</option>
                </select>
            </div>

            <div class="form-group row">
                <input class="form-control col-md-12 col-lg" type="password" name="password" placeholder="Create Password" required>
                <input class="form-control col-md-12 col-lg" type="password" name="confirmed-password" placeholder="Confirm Password" required>
            </div>

            <div class="form-group row">
                <input class=" form-control" type="submit" value="Register">
                <input class="form-control" type="submit" value="Reset">
            </div>
       
        </form>
    </div>
</div>

<%-include('../partials/footer.ejs') %>